{
  "extends": "solhint:recommended",
  "rules": {
    "max-line-length": [
      "error",
      130
    ],
    "compiler-version": [
      "error",
      "0.8.15"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "prettier/prettier": "error"
  },
  "plugins": [
    "prettier"
  ]
}