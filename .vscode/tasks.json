{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install",
            "type": "shell",
            "command": "yarn install --dev",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "prettier",
            "type": "shell",
            "command": "yarn prettier:check",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "install",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "hint",
            "type": "shell",
            "command": "yarn hint",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "prettier",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "forge build --sizes",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "hint",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "forge test -vvv",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "hint",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "gastest",
            "type": "shell",
            "command": "forge test -vvv --gas-report",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "hint",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "abi",
            "type": "shell",
            "command": "bin/update_abi.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "build",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "forge clean && forge cache clean",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "build",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "production",
            "type": "shell",
            "command": "yarn install --production",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "test",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "verifycontract",
            "type": "shell",
            "command": "forge verify-contract -f --delay 30 ${CONTRACT_ADDRESS} contracts/${CONTRACT_NAME}.sol:${CONTRACT_NAME} --chain-id ${CHAIN_ID} --watch ${ETHERSCAN_API_KEY}",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "CONTRACT_NAME": "GovernanceBuilder",
                    "CONTRACT_ADDRESS": "0x02dA9682cb0AEdD8e1f50F88E01eCFcdC44c6b9b",
                    "CHAIN_ID": "5"
                }
            },
            "dependsOn": "production",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "deployconstant",
            "type": "shell",
            "command": "forge create --contracts contracts/Constant.sol --rpc-url ${DEVNET_RPC_URL} --private-key ${ETH_DEV_PRIVATE} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify Constant",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "production",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "deployfactory",
            "type": "shell",
            "command": "forge create --contracts contracts/VoterClassFactory.sol --rpc-url ${DEVNET_RPC_URL} --private-key ${ETH_DEV_PRIVATE} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify VoterClassFactory",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "production",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "deploybuilder",
            "type": "shell",
            "command": "forge create --libraries contracts/Constant.sol:Constant:${CONSTANT_LIB_ADDRESS} --contracts contracts/GovernanceBuilder.sol --rpc-url ${DEVNET_RPC_URL} --private-key ${ETH_DEV_PRIVATE} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify GovernanceBuilder",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "CONSTANT_LIB_ADDRESS": "0x7e3C8cf2F6d02b37CAaBcc5f0163B58C4b619e87"
                }
            },
            "dependsOn": "production",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "deploysystem",
            "type": "shell",
            "command": "forge create --contracts contracts/System.sol --rpc-url ${DEVNET_RPC_URL} --private-key ${ETH_DEV_PRIVATE} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify System --constructor-args ${BUILDER_ADDRESS} ${CLASS_CREATOR_ADDRESS}",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "CLASS_CREATOR_ADDRESS": "0x836CcF6E97A66AE92AA605DFe6869DDE64b2cC3D",
                    "BUILDER_ADDRESS": "0x8eFCF74380F242c8f220808AA1763539D2DA6F21"
                }
            },
            "dependsOn": "production",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        }
    ]
}
