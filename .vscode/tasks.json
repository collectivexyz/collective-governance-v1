{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "install",
      "type": "shell",
      "command": "yarn install --dev",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "prettier",
      "type": "shell",
      "command": "yarn prettier:check",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "install",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "hint",
      "type": "shell",
      "command": "yarn hint",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "prettier",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "forge build --sizes",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "forge test -vvv",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "gastest",
      "type": "shell",
      "command": "forge test -vvv --gas-report",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "abi",
      "type": "shell",
      "command": "bin/update_abi.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "build",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "forge clean && forge cache clean",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "build",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "production",
      "type": "shell",
      "command": "yarn install --production",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "verifycontract",
      "type": "shell",
      "command": "forge verify-contract -f --delay 30 ${CONTRACT_ADDRESS} contracts/${CONTRACT_NAME}.sol:${CONTRACT_NAME} --chain-id ${CHAIN_ID} --watch ${ETHERSCAN_API_KEY}",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CONTRACT_NAME": "GovernanceBuilder",
          "CONTRACT_ADDRESS": "0x02dA9682cb0AEdD8e1f50F88E01eCFcdC44c6b9b",
          "CHAIN_ID": "5"
        }
      },
      "dependsOn": "production",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deployconstant",
      "type": "shell",
      "command": "forge create --revert-strings debug --contracts contracts/Constant.sol --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify Constant",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "production",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deploycommunitybuilder",
      "type": "shell",
      "command": "forge create --revert-strings debug --libraries contracts/Constant.sol:Constant:${CONSTANT_LIB_ADDRESS} --contracts contracts/community/CommunityBuilder.sol --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify CommunityBuilder",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CONSTANT_LIB_ADDRESS": "0xd050519a201b4b990711922BA72299Ab5669BEA4"
        }
      },
      "dependsOn": "production",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deploycollective",
      "type": "shell",
      "command": "forge script ./script/DeployCollective.sol --sig 'deploy()' --libraries contracts/Constant.sol:Constant:${CONSTANT_LIB_ADDRESS} --slow --broadcast --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CONSTANT_LIB_ADDRESS": "0xd050519a201b4b990711922BA72299Ab5669BEA4"
        }
      },
      "dependsOn": "production",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deployproposalbuilder",
      "type": "shell",
      "command": "forge create --revert-strings debug --libraries contracts/Constant.sol:Constant:${CONSTANT_LIB_ADDRESS} --contracts contracts/ProposalBuilder.sol --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify ProposalBuilder --chain goerli --constructor-args ${GOVERNANCE_ADDRESS} ${STORAGE_ADDRESS} ${META_ADDRESS}",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CONSTANT_LIB_ADDRESS": "0xd050519a201b4b990711922BA72299Ab5669BEA4",
          "GOVERNANCE_ADDRESS": "0xea9d53f2Ee1214dbC29b17911FE3D08d5601f09c",
          "STORAGE_ADDRESS": "0xE229593BAAA15Ec3e7bC78c3c1F383E5CFed9176",
          "META_ADDRESS": "0x230ea7877468bF7D8ae4ee712eed761aE7704994"
        }
      },
      "dependsOn": "production",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deploysystem",
      "type": "shell",
      "command": "forge create --revert-strings debug --contracts contracts/System.sol --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify --chain goerli System --constructor-args ${BUILDER_ADDRESS} ${CLASS_CREATOR_ADDRESS}",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CLASS_CREATOR_ADDRESS": "0x836CcF6E97A66AE92AA605DFe6869DDE64b2cC3D",
          "BUILDER_ADDRESS": "0x8eFCF74380F242c8f220808AA1763539D2DA6F21"
        }
      },
      "dependsOn": "production",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    }
  ]
}
