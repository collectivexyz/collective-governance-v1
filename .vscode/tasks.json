{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "install",
      "type": "shell",
      "command": "yarn install --dev",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "yarn lint",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "install",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "hint",
      "type": "shell",
      "command": "yarn hint",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "install",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "forge build --sizes",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "abi",
      "type": "shell",
      "command": "bin/update_abi.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "build",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "production",
      "type": "shell",
      "command": "yarn install --production",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deployfactory",
      "type": "shell",
      "command": "forge create --contracts contracts/VoterClassFactory.sol --rpc-url ${DEVNET_RPC_URL} --private-key ${ETH_DEV_PRIVATE} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify VoterClassFactory",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "production",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deploybuilder",
      "type": "shell",
      "command": "forge create --contracts contracts/GovernanceBuilder.sol --rpc-url ${DEVNET_RPC_URL} --private-key ${ETH_DEV_PRIVATE} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify GovernanceBuilder",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "production",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "forge test -vvv",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "gastest",
      "type": "shell",
      "command": "forge test -vvv --gas-report",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    }
  ]
}
