{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "install",
      "type": "shell",
      "command": "yarn install --dev",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "prettier",
      "type": "shell",
      "command": "yarn prettier:check",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "install",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "hint",
      "type": "shell",
      "command": "yarn hint",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "prettier",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "forge build --sizes",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "forge test -vvv",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "gastest",
      "type": "shell",
      "command": "forge test --gas-report",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "abi",
      "type": "shell",
      "command": "bin/update_abi.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "build",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "forge clean && forge cache clean",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "build",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "production",
      "type": "shell",
      "command": "yarn install --production",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deployecdsa",
      "type": "shell",
      "command": "forge create --contracts ./lib/openzeppelin-contracts/contracts/utils/cryptography/ECDSA.sol --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} ECDSA",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deployconstant",
      "type": "shell",
      "command": "forge create --contracts contracts/Constant.sol --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} Constant",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deploytreasurybuilder",
      "type": "shell",
      "command": "forge script ./script/DeployTreasuryBuilder.sol --sig 'deploy()' --libraries ./lib/openzeppelin-contracts/contracts/utils/cryptography/ECDSA.sol:ECDSA:${ECDSA_LIB_ADDRESS} --libraries contracts/Constant.sol:Constant:${CONSTANT_LIB_ADDRESS} --slow --broadcast --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CONSTANT_LIB_ADDRESS": "0x532bdBAa513194B446F49c70b104a0Ab61b9bB7c",
          "ECDSA_LIB_ADDRESS": "0xe9e21aaEaEad9c57C1F4c622915fFB54f9Ebe338"
        }
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "upgradetreasurybuilder",
