{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "lint",
      "type": "shell",
      "command": "yarn lint",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "forge build --sizes",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "lint",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "forge test -vvv --optimize",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "build",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
