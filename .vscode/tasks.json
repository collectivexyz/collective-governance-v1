{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "install",
      "type": "shell",
      "command": "yarn install --dev",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "prettier",
      "type": "shell",
      "command": "yarn prettier:check",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "install",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "hint",
      "type": "shell",
      "command": "yarn hint",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "prettier",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "forge build --sizes",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "forge test -vvv",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "gastest",
      "type": "shell",
      "command": "forge test -vvv --gas-report",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "abi",
      "type": "shell",
      "command": "bin/update_abi.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "build",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "forge clean && forge cache clean",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "build",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "production",
      "type": "shell",
      "command": "yarn install --production",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deployconstant",
      "type": "shell",
      "command": "forge create --revert-strings debug --contracts contracts/Constant.sol --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} Constant",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deploycommunitybuilder",
      "type": "shell",
      "command": "forge script ./script/DeployCommunityBuilder.sol --sig 'deploy()' --libraries contracts/Constant.sol:Constant:${CONSTANT_LIB_ADDRESS} --slow --broadcast --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CONSTANT_LIB_ADDRESS": "0x5a7D758870C57d8A4E1AB309079705E77D279D0a"
        }
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "upgradecommunitybuilder",
      "type": "shell",
      "command": "forge script ./script/DeployCommunityBuilder.sol --sig 'upgrade()' --libraries contracts/Constant.sol:Constant:${CONSTANT_LIB_ADDRESS} --slow --broadcast --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CONSTANT_LIB_ADDRESS": "0x5a7D758870C57d8A4E1AB309079705E77D279D0a",
          "BUILDER_ADDRESS": "0x564eD7F60C134Aa86912bA00217398Be7B0C00D3"
        }
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "upgradecommunityclass",
      "type": "shell",
      "command": "forge script ./script/UpgradeCommunityClass.sol --sig 'upgrade()' --libraries contracts/Constant.sol:Constant:${CONSTANT_LIB_ADDRESS} --slow --broadcast --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CONSTANT_LIB_ADDRESS": "0x5a7D758870C57d8A4E1AB309079705E77D279D0a",
          "CLASS_PROXY": "0xC9607cd3c8929ABf9af1DA9bF4895fb44D0AA9f7",
          "TARGET": "0xfaff0a74e8230f60cd4c241f354c524b5264090c"
        }
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deploycollective",
      "type": "shell",
      "command": "forge script ./script/DeployCollective.sol --sig 'deploy()' --libraries contracts/Constant.sol:Constant:${CONSTANT_LIB_ADDRESS} --slow --broadcast --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CONSTANT_LIB_ADDRESS": "0x5a7D758870C57d8A4E1AB309079705E77D279D0a"
        }
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "upgradecollective",
      "type": "shell",
      "command": "forge script ./script/DeployCollective.sol --sig 'upgrade()' --libraries contracts/Constant.sol:Constant:${CONSTANT_LIB_ADDRESS} --slow --broadcast --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CONSTANT_LIB_ADDRESS": "0x5a7D758870C57d8A4E1AB309079705E77D279D0a",
          "BUILDER_ADDRESS": "0x7d08A9B6d23803102a6e49714cAd48E87D999099"
        }
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deployproposalbuilder",
      "type": "shell",
      "command": "forge script ./script/DeployProposalBuilder.sol --sig 'deploy()' --libraries contracts/Constant.sol:Constant:${CONSTANT_LIB_ADDRESS} --slow --broadcast --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CONSTANT_LIB_ADDRESS": "0x5a7D758870C57d8A4E1AB309079705E77D279D0a",
          "GOVERNANCE_ADDRESS": "0x229af948cf8576e32f96d7f50db2d61aa54bb04b",
          "STORAGE_ADDRESS": "0x799e9fd969cf1d3f84660f0f40ff2fca3f488c3b",
          "META_ADDRESS": "0x0fef0dd06502603a3dfc89a8c4e5e507ee15f96d"
        }
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "upgradeproposalbuilder",
      "type": "shell",
      "command": "forge script ./script/DeployProposalBuilder.sol --sig 'upgrade()' --libraries contracts/Constant.sol:Constant:${CONSTANT_LIB_ADDRESS} --slow --broadcast --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CONSTANT_LIB_ADDRESS": "0x5a7D758870C57d8A4E1AB309079705E77D279D0a",
          "BUILDER_ADDRESS": "",
          "GOVERNANCE_ADDRESS": "0xa2f50e55ac910ba030b3e4cab92da8de5b38ef2d",
          "STORAGE_ADDRESS": "0xe0c76c1621738b870eac5a37447fdadc8c077c21",
          "META_ADDRESS": "0x108a592f963050f4492a5c4cecfe82ce0b57fb08"
        }
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "deploysystem",
      "type": "shell",
      "command": "forge create --revert-strings debug --contracts contracts/System.sol --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify --chain goerli System --constructor-args ${BUILDER_ADDRESS} ${CLASS_CREATOR_ADDRESS}",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CLASS_CREATOR_ADDRESS": "0x836CcF6E97A66AE92AA605DFe6869DDE64b2cC3D",
          "BUILDER_ADDRESS": "0x8eFCF74380F242c8f220808AA1763539D2DA6F21"
        }
      },
      "dependsOn": "test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    }
  ]
}
